<!DOCTYPE html>
<html lang="en">
    <head>
        <link href="/stylesheets/index.css" rel="stylesheet" type="text/css">
    </head>
    <% include templates/head.ejs %>
    <script>
        var cityData = <%- JSON.stringify(cityData) %>;
    </script>
    <body>
        <!-- This imports the naviagtion template I made -->
        <% include templates/navigation.ejs %>
        <div id="wrapper">
            <% include templates/sidebar.ejs %>
            <!-- Page Content -->
            <div id = "page-content-wrapper">
                <div class="container-fluid">
                    <!-- This imports an image -->
                    <div class = "row">
                        <div class = "text-center">
                             <div id="myCarousel" class="carousel slide" data-ride="carousel" >
                              <!-- Indicators -->
                              <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                
                                <% for(var i = 1; i < cityData.imageUrl.length; ++i) {%>
                                    <li data-target="#myCarousel" data-slide-to="i"></li>
                                <% } %>
                              </ol>

                              <!-- Wrapper for slides -->
                              <div class="carousel-inner" role="listbox" >
                                <div class="item active">
                                  <img src= <%- cityData.imageUrl[0] %> >
                                </div>
                                <% for(var i = 1; i < cityData.imageUrl.length; ++i) {%>
                                    <div class="item">
                                        <img src= <%- cityData.imageUrl[i] %> >
                                    </div>
                                <% } %>
                              </div>

                              <!-- Left and right controls -->
                              <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                              <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </div>
                        </div>
                    </div>
                    <!-- This is the City info sections -->
                    <div class = "col-md-offset-2 col-xs-offset-1">
                            <h2><%- cityData.cityName + ", " + cityData.country %></h2>
                    </div>
                    <div class = "row">
                        <!-- Columns -->
                        <div class = "col-xs-12 col-sm-6 col-lg-4">
                            <div id="flightsAndHotels">
                                <h3>Flights:</h3>
                                <div id = "flightsPane">
                                    <button id = "flight-toggle" class="btn btn-default">
                                        <img src= "/images/airplaneLogo.png" class = "img-rounded img-responsive" >
                                    </button>
                                </div>
                                <h3>Places to Stay:</h3>
                                <div id = "hotelPane">  
                                    <button id = "hotel-toggle" class="btn btn-default">
                                        <img src= "/images/hotelLogo.jpg" class = "img-rounded img-responsive" >
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class = "col-xs-12 col-sm-6 col-lg-4">
                            <div id="toDoPane"> 
                            <h3>Things to Do:</h3>
                            <% for(var i = 0; i < cityFoursquareData.length; ++i) {%>
                                <div><%- JSON.stringify(cityFoursquareData[i].name) %></div>
                            <% } %>
                            </div>
                        </div>
                        <div class = "col-xs-12 col-sm-12 col-lg-4">
                            <div id="article"> </div>
                        </div>
                    </div>
                    <div class = "row">
                        <% include templates/footer.ejs %>
                    </div>
                </div>
            </div>
        </div>
        
        <script src= "/javascripts/indexCode.js">
            //Here be all the code for index.ejs
        </script>
    </body>
</html>









